{
  "properties": [
    {
      "name": "conexaoauth.enabled",
      "type": "java.lang.Boolean",
      "description": "Habilita/desabilita a biblioteca ConexãoAuthLib.",
      "defaultValue": true
    },
    {
      "name": "conexaoauth.server.url",
      "type": "java.lang.String",
      "description": "URL base do servidor ConexãoAuth.",
      "defaultValue": "http://localhost:8080"
    },
    {
      "name": "conexaoauth.server.api-version",
      "type": "java.lang.String",
      "description": "Versão da API a ser utilizada.",
      "defaultValue": "v1"
    },
    {
      "name": "conexaoauth.auth.default-client-id",
      "type": "java.lang.String",
      "description": "Client ID OAuth2 padrão."
    },
    {
      "name": "conexaoauth.auth.default-client-secret",
      "type": "java.lang.String",
      "description": "Client Secret OAuth2 padrão."
    },
    {
      "name": "conexaoauth.auth.default-realm",
      "type": "java.lang.String",
      "description": "Realm padrão para autenticação.",
      "defaultValue": "master"
    },
    {
      "name": "conexaoauth.timeout.connect",
      "type": "java.time.Duration",
      "description": "Timeout de conexão HTTP.",
      "defaultValue": "5s"
    },
    {
      "name": "conexaoauth.timeout.read",
      "type": "java.time.Duration",
      "description": "Timeout de leitura HTTP.",
      "defaultValue": "30s"
    },
    {
      "name": "conexaoauth.retry.enabled",
      "type": "java.lang.Boolean",
      "description": "Habilita lógica de retry para requisições falhas.",
      "defaultValue": true
    },
    {
      "name": "conexaoauth.retry.max-attempts",
      "type": "java.lang.Integer",
      "description": "Número máximo de tentativas de retry.",
      "defaultValue": 3
    },
    {
      "name": "conexaoauth.retry.initial-interval",
      "type": "java.time.Duration",
      "description": "Intervalo inicial entre tentativas.",
      "defaultValue": "1000ms"
    },
    {
      "name": "conexaoauth.retry.multiplier",
      "type": "java.lang.Double",
      "description": "Multiplicador para backoff exponencial.",
      "defaultValue": 2.0
    },
    {
      "name": "conexaoauth.retry.max-interval",
      "type": "java.time.Duration",
      "description": "Intervalo máximo entre tentativas.",
      "defaultValue": "10000ms"
    },
    {
      "name": "conexaoauth.logging.enabled",
      "type": "java.lang.Boolean",
      "description": "Habilita logging de requisições/respostas.",
      "defaultValue": true
    },
    {
      "name": "conexaoauth.logging.level",
      "type": "java.lang.String",
      "description": "Nível de logging para requisições.",
      "defaultValue": "INFO"
    },
    {
      "name": "conexaoauth.logging.log-request-body",
      "type": "java.lang.Boolean",
      "description": "Loga corpo da requisição (pode conter dados sensíveis).",
      "defaultValue": false
    },
    {
      "name": "conexaoauth.logging.log-response-body",
      "type": "java.lang.Boolean",
      "description": "Loga corpo da resposta (pode conter dados sensíveis).",
      "defaultValue": false
    },
    {
      "name": "conexaoauth.token-storage.type",
      "type": "java.lang.String",
      "description": "Tipo de armazenamento de token (memoria, redis, etc.).",
      "defaultValue": "memory"
    },
    {
      "name": "conexaoauth.token-storage.ttl",
      "type": "java.time.Duration",
      "description": "TTL (Time To Live) do token em cache.",
      "defaultValue": "55m"
    },
    {
      "name": "conexaoauth.token-storage.refresh-window",
      "type": "java.time.Duration",
      "description": "Janela de refresh para evitar expiração.",
      "defaultValue": "5m"
    },
    {
      "name": "conexaoauth.circuit-breaker.enabled",
      "type": "java.lang.Boolean",
      "description": "Habilita/desabilita circuit breaker.",
      "defaultValue": false
    },
    {
      "name": "conexaoauth.circuit-breaker.failure-threshold",
      "type": "java.lang.Integer",
      "description": "Limite de falhas para abrir o circuito.",
      "defaultValue": 5
    },
    {
      "name": "conexaoauth.circuit-breaker.timeout",
      "type": "java.time.Duration",
      "description": "Timeout em segundos para tentativas.",
      "defaultValue": "30s"
    },
    {
      "name": "conexaoauth.circuit-breaker.half-open-max-calls",
      "type": "java.lang.Integer",
      "description": "Máximo de chamadas em estado half-open.",
      "defaultValue": 3
    }
  ],
  "hints": [
    {
      "name": "conexaoauth.enabled",
      "values": [
        {
          "value": true,
          "description": "Habilita recursos da ConexãoAuthLib."
        },
        {
          "value": false,
          "description": "Desabilita recursos da ConexãoAuthLib."
        }
      ]
    },
    {
      "name": "conexaoauth.logging.level",
      "values": [
        {
          "value": "NONE",
          "description": "Sem logging."
        },
        {
          "value": "BASIC",
          "description": "Logging básico (método e URL da requisição)."
        },
        {
          "value": "HEADERS",
          "description": "Logging de headers."
        },
        {
          "value": "FULL",
          "description": "Logging completo de requisição/resposta."
        }
      ]
    },
    {
      "name": "conexaoauth.token-storage.type",
      "values": [
        {
          "value": "memory",
          "description": "Armazenamento em memória."
        }
      ]
    }
  ]
}