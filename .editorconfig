# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Java files
[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 8

# XML files
[*.xml]
indent_style = space
indent_size = 4

# YAML files
[*.yml]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Shell files
[*.sh]
end_of_line = lf